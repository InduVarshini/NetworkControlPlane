# Configuration for {{ device_name }}
# Generated by NetworkControlPlane configuration rendering

{% if device_config.get('hostname') %}
hostname {{ device_config.hostname }}
{% else %}
hostname {{ device_name }}
{% endif %}

{% if interfaces %}
# Interface configuration
{% for interface in interfaces %}
interface {{ interface.name }}
{% if interface.get('ip') %}
 ip address {{ interface.ip }}{% if interface.get('netmask') %} {{ interface.netmask }}{% endif %}
{% endif %}
{% if interface.get('description') %}
 description {{ interface.description }}
{% endif %}
{% if interface.get('shutdown') %}
 shutdown
{% endif %}
{% endfor %}
{% endif %}

{% if routes %}
# Static routes
{% for route in routes %}
{% if route.get('network') and route.get('next_hop') %}
ip route {{ route.network }} {{ route.next_hop }}
{% endif %}
{% endfor %}
{% endif %}

